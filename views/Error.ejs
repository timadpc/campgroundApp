<% layout('./layouts/boilerplate') %>

  <div class="row mt-5">
    <div class="col-6 offset-3">
      <div class="alert alert-danger" role="alert">
        <p>
          <%= err.message %>
        </p>
        <hr>
        <h5>
          Error status: <%= status %>
        </h5>
        <% if (process.env.NODE_ENV !== 'production') {%> 
        <hr> 
        <p>
          <%= err.stack %>
        </p>
        <% } %> 
      </div>
    </div>
  </div>