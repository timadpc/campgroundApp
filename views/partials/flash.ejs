

<div id="success">
  <% if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 p-3 
    fixed-bottom position" role="alert">
      <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
</div>

<div id="info">
  <% if(info && info.length) {%>
    <div class="alert alert-secondary alert-dismissible fade show col-6 offset-3 p-3 
    fixed-bottom position" role="alert">
      <%= info %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
</div>

<div id="error">
  <% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3" role="alert">
      <strong>Error</strong>
      <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
</div>